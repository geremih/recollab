.row
  .col-lg-4
  .col-lg-4
    - pages.each do |page|
      .corgi_feed_well
        .individual_feed_item
          .feed_item
            .feed_body
              .row
                .feed_profile_pic
                  = gravatar_for page.user
                .feed_text
                  %p
                    %a{href: "http://" + page.link , :target => "_blank"}
                      = page.link
            %hr.feed_hr
            .comment_area{style: "display: none"}
              %ul.list-group
                - page.comments.sort_by(&:updated_at).reverse.each do |comment|
                  %li.list-group-item
                    = comment.body
                    %span.badge
                      = comment.updated_at.strftime("%B %d, %Y")

            .bottom_meta
              .row
                .bottom_left
                  %a{href:"#"}
                    - page.tags.each do |tag|
                      = link_to tag.name, pages_path(tag: tag.name) 

                .bottom_right
                  = page.user.name
                  %span |
                  = page.updated_at.strftime("%B %d, %Y")
                  %a.show_comment_link{href:"#"} Comments
    = paginate pages


      
