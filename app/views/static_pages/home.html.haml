
.home
  .row
    .col-md-6.col-md-offset-3
      .intro-section
        .logo
          %h1 reCollab
        #login-tabs
          %ul
            %li
              %a{href:"#login-tab"} Login
            %li
              %a{href:"#signup-tab"}Signup
          #login-tab
            = form_tag session_path(:user),:class => "login-form", :role => "form"  do
              %h2.login-form-title
                Sign In
              %h3.login-form-subtitle
                Welcome to recollab
              = email_field_tag 'user[email]', nil, :placeholder => "Email" 
              = password_field_tag 'user[password]', nil, :placeholder => "Password"
              %button.action-button.btn.btn-default{type:"submit"} Sign in
          #signup-tab
            = form_for(User.new,:html => { :class => "login-form", :role => "form" }) do |f| 
              %h2.login-form-title
                Create your account
              %h3.login-form-subtitle
                Welcome to recollab
              = f.text_field :name, :placeholder => "Name" 
              = f.email_field :email, :type => :email, :placeholder => "Email" 
              = f.password_field :password,  :placeholder => "Password" 
              = f.password_field :password_confirmation, :placeholder => "Confirm Password" 
              %button.action-button.btn.btn-default{type:"submit"}
                Sign up
